<% layout('layouts/boilerplate')%>
    <div class='row'>
        <h1 class='text-center mb-4'>New Campground</h1>
        <div class="col-md-6 offset-md-3">
            <div class="card shadow mb-5">
                <div class="card-body">
                    <form action='/campgrounds' method='POST' novalidate class='validated-form'
                        enctype='multipart/form-data'>
                        <div class='mb-3'>
                            <label class='form-label' for='title'>Title</label>
                            <input class='form-control' type='text' name='campground[title]' id='title'
                                placeholder='title' required>
                            <div class='valid-feedback'>Good job typing!</div>
                        </div>
                        <div class='mb-3'>
                            <label class='form-label' for='location'>Location</label>
                            <input class='form-control' type='text' name='campground[location]' id='location'
                                placeholder='location' required>
                        </div>
                        <div class='mb-3'>
                            <label class='form-label' for='price'>Price</label>
                            <div class='input-group'>
                                <span class='input-group-text' id='price-label'>$</span>
                                <input class='form-control' type='number' name='campground[price]' id='price'
                                    placeholder='0.00' aria-describedby='price-label' required>
                            </div>
                        </div>
                        <div class='mb-3'>
                            <label class='form-label' for='description'>Description</label>
                            <textarea class='form-control' name='campground[description]' id='description'
                                required></textarea>
                        </div>
                        <div class="mb-3 custom-file">
                            <label for="image" class="form-label custom-file-label">Add images</label>
                            <input class="form-control" type="file" name='image' id="image" multiple>
                        </div>
                        <div class='mb-3'>
                            <button class='btn btn-success'>add campsite</button>
                        </div>
                    </form>
                    <a class='btn btn-warning' href='/campgrounds'>All Campgrounds</a>
                </div>
            </div>
        </div>
    </div>